<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="pt.ulisboa.tecnico.cmu.hoponcmu.PostQuizAnswers">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="74dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:text="Question"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/questionnumber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="number"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Pergunta"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/resposta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:lineSpacingExtra="0sp"
        android:padding="0dp"
        android:text="First Answer" />

    <Button
        android:id="@+id/resposta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:lineSpacingExtra="0sp"
        android:text="Second Answer" />

    <Button
        android:id="@+id/resposta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:lineSpacingExtra="0sp"
        android:text="Third Answer" />

    <Button
        android:id="@+id/resposta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:lineSpacingExtra="0sp"
        android:text="Fourth Answer" />

    <Button
        android:id="@+id/buttonsubmit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:visibility="invisible" />

</LinearLayout>
